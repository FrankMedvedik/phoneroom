                <StackPanel Orientation="Horizontal" Background="White" >
        <Views:JobDetailView  Name="JobDetail" Margin="6" />
        <Views:TimerView x:Name="timer" Margin="3" VerticalAlignment="Top"  HorizontalAlignment="Center" MinHeight="188" Height="181" />
        <Views:LyncSearchView  Margin="3" VerticalAlignment="Top"  HorizontalAlignment="Center" Background="White" MinHeight="202" />
            </StackPanel>
            <Views:BuildInformationView />

<UserControl x:Class="PhoneLogic.Core.Areas.CallsRpts.CallsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             mc:Ignorable="d ignore">
    <Grid>
        <sdk:DataGrid x:Name="CallsDG" AutoGenerateColumns="True" MaxHeight="600"  Visibility="{Binding ShowGridData, Converter={StaticResource BoolToVisConverter}}"
                    VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto"   SelectionChanged="CallsDG_SelectionChanged" 
                    ItemsSource="{Binding FilteredCalls}"  VerticalAlignment="Top" SelectedItem="{Binding SelectedCall, Mode=TwoWay}"  
                    ToolTipService.ToolTip="Phone Calls" Margin="6" HorizontalAlignment="Stretch" SelectionMode="Single" >
        </sdk:DataGrid>
    </Grid>
</UserControl>

<UserControl xmlns:Views="clr-namespace:PhoneLogic.Core.Views"  x:Class="PhoneLogic.Core.Areas.CallsRpts.CallsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ignore="http://www.ignore.com"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:audioPlayer="clr-namespace:AudioPlayer;assembly=AudioPlayer"
             mc:Ignorable="d ignore">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0"  Grid.Row="0" HorizontalAlignment="Stretch" >
            <TextBlock Text="{Binding HeadingText}" FontWeight="Bold" HorizontalAlignment="Left" Margin="6"/>
        </StackPanel>
        <sdk:DataGrid Grid.Column="0"   Grid.Row="1"  x:Name="CallsDG" AutoGenerateColumns="False" MaxHeight="300"  
                      Visibility="{Binding ShowGridData, Converter={StaticResource BoolToVisConverter}}"
                    VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto"   SelectionChanged="CallsDG_SelectionChanged" Loaded="CallsDG_Loaded"
                    ItemsSource="{Binding Calls}"  VerticalAlignment="Top" SelectedItem="{Binding SelectedCall, Mode=TwoWay}"  
                    ToolTipService.ToolTip="Phone Calls" Margin="6" HorizontalAlignment="Left" SelectionMode="Single" >
            <sdk:DataGrid.Columns>
                <sdk:DataGridTextColumn Binding="{Binding JobFormatted }" />
                <sdk:DataGridTextColumn Binding="{Binding PhoneFormatted }" />
                <sdk:DataGridTextColumn Binding="{Binding CallDirection }" />
                <sdk:DataGridTextColumn Binding="{Binding CallEndStatus }" />
                <sdk:DataGridTextColumn Binding="{Binding CallStartTime }" />
                <sdk:DataGridTextColumn Binding="{Binding CallDurationFormatted}" />
            </sdk:DataGrid.Columns>
        </sdk:DataGrid>
        <audioPlayer:SimplePlayer Grid.Column="1"   Name="AudioPlayer" Grid.Row="1" Visibility="Collapsed" Margin="10"/>
        <Button Visibility="{Binding ShowGridData, Converter={StaticResource BoolToVisConverter}}"  Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left"  Width="100" Click="Button_Click" >Save To Excel</Button>
    </Grid>
</UserControl>

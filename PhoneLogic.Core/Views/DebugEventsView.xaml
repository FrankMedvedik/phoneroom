<UserControl x:Class="PhoneLogic.Core.Views.DebugEventsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" >
        <StackPanel   Name="DebugData" Margin="10" Background="#FFD6A6A6">
            <TextBlock FontSize="12" FontWeight="Bold" Text="Conversation Guid" Margin="6" HorizontalAlignment="Left"/>
            <TextBox FontSize="12" FontWeight="Bold" Text="{Binding PhoneLogicContext.conversationId}"  IsReadOnly="True" />
            <ListBox x:Name="eventlog_Listbox"  FontSize="12" FontWeight="Bold" ItemsSource="{Binding DebugEvents}" HorizontalAlignment="Left" Margin="6"  />
        </StackPanel>

    </Grid>
</UserControl>

<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:PhoneLogic.Core.Views;assembly=PhoneLogic.Core"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    x:Class="PhoneLogic.Mgr.MainPage" mc:Ignorable="d" >
        <Grid x:Name="LayoutRoot"  Margin="6" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                   <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <sdk:TabControl  Width="Auto"  >
            <sdk:TabItem  Header="Today's Call Log Summary">
                <views:TodaysCallLogRptView />
            </sdk:TabItem>
            <sdk:TabItem  Header="Recruiters">
                <views:RecruitersListView />
            </sdk:TabItem>
            <!--<sdk:TabItem  Header="Available Recruiters">
                <views:RecruitersAvailableView />
            </sdk:TabItem>
            <sdk:TabItem  Header="Online Recruiters">
                <views:RecruitersOnlineView />
            </sdk:TabItem>-->
            <sdk:TabItem  Header="Job Call Activity">
                <views:JobCallActivityRptView />
            </sdk:TabItem>
            <sdk:TabItem  Header="Inbound Calls By Hour">
                <views:InboundCallsByHrRptView />
            </sdk:TabItem>
            <sdk:TabItem  Header="Queued Calls">
                <views:CallsInQueueView />
            </sdk:TabItem>
        </sdk:TabControl>
    </Grid>
</UserControl>



<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="PhoneLogic.DialHistory.App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ignore="http://www.galasoft.ch/ignore"
			 xmlns:converters="clr-namespace:PhoneLogic.Core.Converters;assembly=PhoneLogic.Core"
			 mc:Ignorable="d ignore">
    <Application.Resources>
            <converters:BooleanToVisibility x:Key="BoolToVisConverter" />
            <converters:NotBooleanToVisibility x:Key="NotBoolToVisConverter" />
            <Style TargetType="Control" x:Key="DefaultStyle">
                <!--<Setter Property="FontFamily" Value="Microsoft JhengHei"/>-->
                <Setter Property="FontFamily" Value="Lato UI" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin" Value="8" />
            </Style>
        </Application.Resources>
</Application>
